<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa</p>
        <p class="nombre">{{vacancy.company}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Ubicación</p>
        <p class="nombre">{{vacancy.location}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Contrato</p>
        <p class="nombre">{{vacancy.contract}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Salario (USD)</p>
        <p class="nombre">{{vacancy.salary}}</p>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripción del Puesto:</h2>
        <div class="vacante-descripcion">
            {{{vacancy.description}}}
        </div>

        <a href="/vacancies/edit/{{vacancy.url}}" class="btn btn-azul editar-btn">Editar Vacante</a>
    </main>
    <aside class="sidebar">
        <h2>Conocimientos Deseados:</h2>
        <ul class="skills">
            {{#each vacancy.skills}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>

<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contactar Reclutador</h2>
        <p>Llena el siguiente formulario, sube tu curriculum y pronto te contactaremos.</p>
        <form action="/vacancies/{{vacancy.url}}" class="default-form" method="POST" enctype="multipart/form-data">
            <div class="campo">
                <label>Nombre</label>
                <input type="text" name="name" placeholder="Tu Nombre">
            </div>
            <div class="campo">
                <label>Email</label>
                <input type="email" name="email" placeholder="Tu Email">
            </div>
            <div class="campo">
                <label>CV (PDF)</label>
                <input type="file" name="cv">
            </div>
            <div class="campo">
                <input type="submit" class="btn btn-verde" value="Enviar">
            </div>
        </form>
    </div>

    <div class="info-reclutador">
        <h2>Información del Reclutador:</h2>
        {{#if vacancy.author.name}}
            <p>{{vacancy.author.name}}</p>
        {{/if}}
        {{#if vacancy.author.image}}
            <img src="/uploads/profiles/{{vacancy.author.image}}">
        {{/if}}
        <p></p>
    </div>
</div>