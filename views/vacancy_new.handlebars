<main class="contenedor">
    <form action="/vacancies/new" method="POST" class="default-form">
        <h3>Información General</h3>

        <div class="campo">
            <label for="title">Título</label>
            <input type="text" name="title" placeholder="Ej: Node Developer" >
        </div>
        <div class="campo">
            <label for="company">Empresa</label>
            <input type="text" name="company" placeholder="Empresa que contrata" >
        </div>
        <div class="campo">
            <label for="location">Ubicación</label>
            <input type="text" name="location" placeholder="Ej: Argentina o Remoto" >
        </div>
        <div class="campo">
            <label for="salary">Salario (USD)</label>
            <input type="text" name="salary" placeholder="Ej: $1000" >
        </div>
        <div class="campo">
            <label for="contract">Contrato</label>
            <select name="contract">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="Freelance">Freelace</option>
                <option value="Full-Time">Full-time</option>
                <option value="Part-time">Part-time</option>
                <option value="Proyecto">Proyecto</option>
            </select>
        </div>

        <h3>Descripción del puesto:</h3>
        <div class="campo descripcion">
            <label for="description">Descripción</label>
            <input type="hidden" id="x" name="description">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos:</h3>
        <input type="hidden" name="skills" id="skills">
        <ul class="lista-conocimientos">
            {{#selectSkills a}}
            {{/selectSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>