<main class="contenedor">
    <form action="/account-edit" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" value="{{user.name}}" name="name" placeholder="Tu Nombre">
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" value="{{user.email}}" name="email" placeholder="Tu Email">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="image" placeholder="Tu Imagen de Perfil">
            <img src='uploads/profiles/{{user.image}}' class="admin-perfil">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>